      "default": 16,
      "unit": "px"
    },

    {
      "type": "range",
      "id": "content_padding_inline",
      "label": "contetn padding inline",
      "min": 0,
      "max": 40,
      "step": 2,
      "default": 0,
      "unit": "px"
    },

    {
      "type": "header",
      "content": "Design"
    },

    {
      "type": "select",
      "id": "section_bg",
      "label": "section background",

      "options": [

        {
          "value": "#000",
          "label": "Black"
        },

        {
          "value": "#797979",
          "label": "Gray"
        },

        {
          "value": "#fff",
          "label": "White"
        },

      ],

      "default": "#fff"
    },

    {
      "type": "select",
      "id": "card_bg",
      "label": "cards background",

      "options": [

        {
