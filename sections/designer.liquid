      "min": 28,
      "max": 48,
      "step": 2,
      "default": 28,
      "unit": "px"
    },

    {
      "type": "select",
      "id": "title_font_weight",
      "label": "Title font-weight",
      "default": "700",

      "options": [

        {
          "value": "700",
