<style>
  .designer-section {
    max-width: {{ section.settings.section_width }}px;
    margin-inline: auto;
    display: flex;
    flex-direction: {{ section.settings.section_flex_direction }};
    gap: {{ section.settings.section_gap_between }}px;
    background: {{ section.settings.section_bg }}
  }

  {% if section.settings.section_flex_direction == 'row' %}
    .designer-section {
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      padding-inline: 20px;
    }

    .designer-section::-webkit-scrollbar {
       display: none;
    }

    .designer-section .designer-card {
      flex: 0 0 40%;
      scroll-snap-align: start;
    }

  {% endif %}

  .designer-card {
    display: flex;
    align-items: {{ section.settings.card_align_items }};
    gap: {{ section.settings.gap_inner }}px;
    flex-direction: {{ section.settings.content_flex_direction }};
    background: {{ section.settings.card_bg }};
  }

  .designer-card__image img {
    width: {{ section.settings.image_width }};
    border-radius: {{ section.settings.img_border_radius }}px;
    object-fit: {{ section.settings.fit }};
    height: 100%;
  }

  .designer-card__content {
    max-width: 600px;
    padding-inline: {{ section.settings.content_padding_inline }}px;
  }

  .designer-card__title {
    font-size: {{ section.settings.title }}px;
    font-weight: {{ section.settings.title_font_weight }};
    margin: 0;
    margin-bottom: 12px;
    color: {{ section.settings.title_color }};
  }

  {% if section.settings.card_bg == '#fff' %}
    .designer-card__title,.designer-card__description {
      color: #000;
    }

    {% elsif section.settings.card_bg == '#000' %}
    .designer-card__title,.designer-card__description {
      color: #fff;
    }

    .designer-card__link {
      background: #fff;
      color: #000;
    }

    {% elsif section.settings.card_bg == '#797979' %}
    .designer-card__title,.designer-card__description {
      color: #000;
    }

    .designer-card__link {
      background: #fff;
      color: #000;
    }

  {% endif %}

  .designer-card__description {
    font-size: {{ section.settings.description_font_size }}px;
    line-height: 1.6;
    margin: 0;
    margin-bottom: 16px;
  }

  .designer-card__link {
    display: inline-block;
    padding: 10px 16px;
    background: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
  }

</style>

<section class="designer-section">
  {% for designer in shop.metaobjects.designer.values %}
    <div class="designer-card">

      {% if designer.image %}
        <div class="designer-card__image">
          <img
            src="{{ designer.image | img_url: '700x' }}"
            alt="{{ designer.name }}"
            loading="lazy"
          >
        </div>
      {% endif %}

      <div class="designer-card__content">
        {% if designer.name %}
          <h2 class="designer-card__title">
            {{ designer.name }}
          </h2>
        {% endif %}

        {% if designer.description %}
          <p class="designer-card__description">
            {{ designer.description }}
          </p>
        {% endif %}

        {% if designer.url %}
          <a
            href="{{ designer.url }}"
            class="designer-card__link"
          >
            Learn more
          </a>

        {% endif %}
      </div>
    </div>
  {% endfor %}
</section>

