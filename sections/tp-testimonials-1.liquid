<div id="tp-{{ section.id }}" class="tp-{{ section.id }}">
  <div {{ html_id }} class="{{ 'tp-testimonials__container' | append: section.settings.html_class | strip }}">
    <{{ heading_tag }} class="tp-testimonials__heading">
      {% assign heading_words = section.settings.heading | escape | split: ' ' %}
      {% for word in heading_words %}
        {% if forloop.index == 3 %}
          <div class="tp-testimonials__avatars">
            {% if section.settings.avatar_1 != blank %}
              {{ section.settings.avatar_1 | image_url: width: section.settings.avatar_1.width, height: section.settings.avatar_1.height, crop: 'center' | image_tag: class: image_filter_class, loading: 'lazy' }}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'tp__placeholder-image' }}
            {% endif %}
            {% if section.settings.avatar_2 != blank %}
              {{ section.settings.avatar_2 | image_url: width: section.settings.avatar_2.width, height: section.settings.avatar_2.height, crop: 'center' | image_tag: class: image_filter_class, loading: 'lazy' }}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'tp__placeholder-image'}}
            {% endif %}
            {% if section.settings.avatar_3 != blank %}
              {{ section.settings.avatar_3 | image_url: width: section.settings.avatar_3.width, height: section.settings.avatar_3.height, crop: 'center' | image_tag: class: image_filter_class, loading: 'lazy' }}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'tp__placeholder-image'}}
            {% endif %}
          </div>
        {% endif %}
        {{ word }}{% unless forloop.last %} {% endunless %}
      {% endfor %}
    </{{ heading_tag }}>
    
    {% if section.blocks.size > 0 %}
      <div class="swiper testimonialSwiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide tp__block-{{ block .id }}">
              <div class="tp-testimonials__content">
                {%- unless section.settings.disable_rating -%}
                  {%- if block.settings.rating > 0 %}
                    <div class="tp-testimonials__stars">
                      {%- assign total_stars = block.settings.rating -%}
                      {% assign rated_stars = total_stars | ceil %}
                      {%- assign whole_stars = total_stars | floor -%}
                      {%- assign decimal = total_stars | modulo: 1 -%}
                      
                      <svg width="80" height="16" viewBox="0 0 80 16" xmlns="http://www.w3.org/2000/svg">
                        {%- assign star_size = 16 -%}

                        <defs>
                          <clipPath id="half-star-{{ block.id }}">
                            <rect x="0" y="0" width="10.4" height="18" />
                          </clipPath>
                        </defs>
                        {%- for i in (1..5) -%}
                          {%- assign x_position = i | minus: 1 | times: star_size -%}
                          <g transform="translate({{ x_position }}, 0), scale(0.8)">
                            <path d="M10 1l2.59 6.68H19l-5.3 4.34L15 19l-5-3.5L5 19l1.3-6.98L1 8h6.41L10 1z" fill="{% if i <= whole_stars %}{{ section.settings.star_color }}{% else %}none{% endif %}" stroke="{{ section.settings.star_color }}" />
                            {%- if decimal == 0.5 and i == rated_stars -%}
                              <path d="M10 1l2.59 6.68H19l-5.3 4.34L15 19l-5-3.5L5 19l1.3-6.98L1 8h6.41L10 1z" fill="{{ section.settings.star_color }}" stroke="{{ section.settings.star_color }}" clip-path="url(#half-star-{{ block.id }})" />
                            {%- endif -%}
                          </g>
                        {%- endfor -%}
                      </svg>
                    </div>
                  {% endif %}
                {%- endunless -%}

                <div class="tp-testimonials__text">
                  {{ block.settings.testimonial_text }}
                </div>
                
                <div class="tp-testimonials__person-container">
                  <div class="tp-testimonials__person-img">
                    {% if block.settings.person_image %}
                      {{ block.settings.person_image | image_url: width: block.settings.person_image.width, height: block.settings.person_image.height | image_tag: loading: 'lazy' | append: image_filter_class }}
                    {% else %}
                      <img src="https://placehold.co/50x50?text=No+Image" alt="no-image" srcset="" class="tp-testimonials__person-img" width="50" height="50">
                    {% endif %}
                  </div>
                  <div class="tp-testimonials__person-info">
                    <h2 class="tp-testimonials__person-name">{{ block.settings.person_name }}</h2>
                    <p class="tp-testimonials__person-title">{{ block.settings.person_title }}</p>
                  </div>
                </div>
                
                <div class="tp-testimonials__stats">
                  <div class="tp-testimonials__stat">
                    <h2 class="tp-testimonials__stat-value" aria-label="{{ block.settings.stat_1_value }} percent">{{ block.settings.stat_1_value }}</h2>
                    <p class="tp-testimonials__stat-label">{{ block.settings.stat_1_label }}</p>
                  </div>
                  <div class="tp-testimonials__stat">
                    <h2 class="tp-testimonials__stat-value" aria-label="{{ block.settings.stat_2_value }} percent">{{ block.settings.stat_2_value }}</h2>
                    <p class="tp-testimonials__stat-label">{{ block.settings.stat_2_label }}</p>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

      </div>
      {% if section.blocks.size > 1 %}
        <div class="swiper-button-prev">
          <svg xmlns="http://www.w3.org/2000/svg" width="31" height="9" viewBox="0 0 31 9" fill="none">
            <path d="M31 4H6V5H31V4Z" fill="currentColor"/>
            <path d="M6 0V9L0 4.5L6 0Z" fill="currentColor"/>
          </svg>
        </div>
        <div class="swiper-button-next">
          <svg xmlns="http://www.w3.org/2000/svg" width="31" height="9" viewBox="0 0 31 9" fill="none">
            <path d="M0 4H25V5H0V4Z" fill="currentColor"/>
            <path d="M25 0V9L31 4.5L25 0Z" fill="currentColor"/>
          </svg>
        </div>
      {% endif %}
    {% endif %}
  </div>
</div>

<script defer src="https://cdn.shopify.com/s/files/1/0828/2452/8179/files/swiper-10.3.1.min.js?v=1708370795"></script>

<script>
  (function() {
      function initTestimonialSwiper() {
        const container = document.querySelector(".testimonialSwiper");
        if (!container || container.classList.contains('swiper-initialized')) return;
    
        const swiper = new Swiper(".testimonialSwiper", {
          navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
          }
          watchOverflow: false
        });
  
        document.querySelectorAll('.swiper-button-next, .swiper-button-prev').forEach(function(btn) {
          btn.classList.remove('swiper-button-disabled');
          btn.style.display = '';
        });
      }
      
      document.addEventListener('DOMContentLoaded', initTestimonialSwiper);
		  document.addEventListener('shopify:section:load', initTestimonialSwiper);
		  document.addEventListener('shopify:section:select', initTestimonialSwiper);
  })();
</script>

